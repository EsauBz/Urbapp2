<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/main_toolbar" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/grisClair"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <Button
            android:id="@+id/buttonBack"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_back" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/textViewCancel"
                android:layout_toStartOf="@+id/textViewCancel"
                android:background="@drawable/button_cancel_arrow" />

            <TextView
                android:id="@+id/textViewCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSave"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/buttonCancelAll"
                android:layout_toStartOf="@+id/buttonCancelAll"
                android:gravity="left|center_vertical"
                android:text="@string/cancel"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/ardoise1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonCancelAll"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/textViewCancelAll"
                android:layout_toStartOf="@+id/textViewCancelAll"
                android:background="@drawable/button_cancel_all" />

            <TextView
                android:id="@+id/textViewCancelAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textViewCancel"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/buttonSave"
                android:layout_toStartOf="@+id/buttonSave"
                android:gravity="left|center_vertical"
                android:text="@string/cancel_all"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/ardoise1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/textViewSave"
                android:layout_toStartOf="@+id/textViewSave"
                android:background="@drawable/button_save" />

            <TextView
                android:id="@+id/textViewSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="@string/save"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/ardoise1"
                android:textSize="20dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutContainer1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="80dp"
        android:baselineAligned="true"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layout1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight=".30"
            android:background="@color/grisClair"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutContainer2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="false"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="20dp">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layoutContainer3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <Button
                        android:id="@+id/buttonPen"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/pen" />

                    <TextView
                        android:id="@+id/textViewPen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zone_definition"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/ardoise1"
                        android:layout_centerVertical="true"
                        android:textSize="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layoutContainer4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/buttonDefine"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_element_definition" />

                    <TextView
                        android:id="@+id/textViewDefine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/element_caracterisation"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/ardoise1"
                        android:textSize="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical" />


                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layoutContainer5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/buttonGroup"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_group" />

                    <TextView
                        android:id="@+id/textViewGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/group"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/ardoise1"
                        android:textSize="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layoutContainer6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/buttonUngroup"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_ungroup" />

                    <TextView
                        android:id="@+id/textViewUngroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ungroup"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/ardoise1"
                        android:textSize="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layoutContainer7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/buttonRecap"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_recap" />

                    <TextView
                        android:id="@+id/textViewRecap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/summarize"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/ardoise1"
                        android:textSize="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layout2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight=".70"
            android:background="@color/grisClair"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutBitmap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="65dp"></RelativeLayout>

            <Button
                android:id="@+id/buttonHelp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/help"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp" />

        </RelativeLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>